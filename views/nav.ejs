<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Remove Child Elements</title>
</head>
<body>
    <div id="parent">
        <!-- Child elements will be added dynamically using forEach() -->
    </div>
    <button onclick="removeAllChildren()">Remove All Children</button>
    <script>
        function removeAllChildren() {
            const parent = document.getElementById('parent');
            // Clear the inner HTML of the parent div
            parent.innerHTML = '';
        }
        // Example: Rendering child div elements using forEach()
        const parent = document.getElementById('parent');
        const childData = ['Child 1', 'Child 2', 'Child 3']; // Example data
        childData.forEach(child => {
            const childDiv = document.createElement('div');
            childDiv.textContent = child;
            parent.appendChild(childDiv);
        });
    </script>
</body>
</html>
